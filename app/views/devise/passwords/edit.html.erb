

<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }, html: {class: "form-signin"}) do |f| %>
  <h2 class="text-center">Change your password</h2>
  <%= f.error_notification %>

  <%= f.input :reset_password_token, as: :hidden %>
  <%= f.full_error :reset_password_token %>


    <%= f.input :password, label: false, required: true, autofocus: true, , placeholder: "New Password", hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
    <%= f.input :password_confirmation, label: false, placeholder: "Confirm your new password", required: true %>



    <%= f.button :submit, "Change my password" , class: "btn btn-primary btn-block" %>

    <%= render "devise/shared/links" %>

<% end %>
